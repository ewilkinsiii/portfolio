<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <%= image_tag blog.image, width: '75%' unless blog.image.nil? %>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago</p>
  <%= render partial: 'blogs/admin_actions', locals: {blog: blog} %>
  <p><%= markdown blog.body %></p>
  <div class="post-tags"><%= fa_icon "tags"%> <%= raw(blog.tag_list.map { |t| link_to t, tag_path(t) }.join(' ')) %></div>
</div>