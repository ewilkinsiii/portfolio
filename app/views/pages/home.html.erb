    <!-- profile ends -->
    <!-- skills begins -->
    <section id="page-skills" class="page-skills">
         <br>
        <br>
        <div class="container">

            <header class="section-header">
                <h2 class="section-title"><span>Skills</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">Three Steps to Jedi Level</p>
            </header>
            <div class="flex-wrapper">
                <% @skills.each do |skill| %>
                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart blue">
                    <path class="circle-bg"
                        d="M18 2.0845
                        a 15.9155 15.9155 0 0 1 0 31.831
                        a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                    <path class="circle"
                        stroke-dasharray="<%= skill.percent_utilized.to_s + ", 100" %>"
                        d="M18 2.0845
                        a 15.9155 15.9155 0 0 1 0 31.831
                        a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                    <text x="18" y="20.35" class="percentage"><%= skill.percent_utilized%>%</text>
                    </svg>
                    <span><%= skill.title%></span>
                </div>
                <%end%>
            </div>
        </div>
    </section>
    <!-- skills ends -->
    <!-- education begins -->
    <section id="page-education" class="page-education">
        <br>
        <br>
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Education</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">Lorem ipsum dolor sit amet, id iusto oportere mel. </p>
            </header>
            <div class="row">
                <% @educations.each do |education|%>
                    <div class="col-md-6">
                        <article class="education">
                            <header>
                                <h3><%= education.name%> </h3>
                                <p><%= education.title%>- <strong>Graduated:</strong> 
                                	<% if education.end_year.to_s.present? %>
  										   <%= education.end_year.to_s %>
  										<% else %>
  										  Present
  										<%end%>
                                </p>
                            </header>
                            <p><%= education.description %></p>
                        </article>
                    </div>
                <%end%>
            </div>
        </div>
    </section>
    <!-- education ends -->
    <!-- experience begins -->
    <section id="page-experience" class="page-experience">
        <br>
        <br>
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Experience</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">Lorem ipsum dolor sit amet, id iusto oportere mel. </p>
            </header>
            <div class="row">
                <% @experiences.each do |experience|%>
                    <div class="col-md-4">
                        <article class="experience">
                            <header>
                                <h3><%= experience.name %></h3>
                               <p> <%= "#{experience.title} / #{experience.city}, #{experience.state.capitalize} / #{experience.start_year.to_s} -"  %> 
                                 <% if experience.end_year.to_s.present? %>
                                        <%= experience.end_year.to_s%>
                                 <% else %>
                                       Present
                                 <%end%>
                                </p>
                            </header>
                            <% experience.experience_desciptions.by_position.each do |desciption| %>
    							    <p><%= desciption.body%></p>
    						<%end%>
                        </article>
                    </div>
                <%end%>
            </div>
        </div>
    </section>
    <!-- experience ends -->

