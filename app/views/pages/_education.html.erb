<div class="tab-pane fade scrollLeft" id="education" role="tabpanel" aria-labelledby="education-tab">
  <p></p>
  <% @educations.each do |education|%>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <b><%= education.name%></b>, <%=  education.city + ' ' +  education.state  + '.'%> 
            <br>
            <%= education.title %>
          </div>
          <div class="col-md-6">
            <%= education.start_month + ' ' + education.start_year.to_s %> - 
            <%= education.end_month + ' ' + education.end_year.to_s %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= education.description %>
          </li>
        </ul>
      </div>
    </div>
  <%end%>
</div>