<section id="page-contact" class="page-contact">
  <div class="layout">
    <div class="wrapper">
      <section class="module">
        <div class="container">
          <div class="row" style="border-color: gold;">
            <div class="col-md-4 m-auto">
              <div class="up-logo">
                <p class="text-center m-b-50"><img src="assets/images/logo.png" width="100" alt=""></p>
              </div>
              <h1> SIGN UP</h1>
              <hr>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="row">
                  <div class="col-md-12">
                    
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', type:"email" , placeholder:"Email"%>
                    </div>
                    
                    <div class="form-group">
                      <%= f.text_field :name, class: 'form-control form-control-lg',  placeholder:"Name"%>
                    </div>
                  
                  
                 
                    
                    <div class="form-group">
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg' , type:"password", placeholder:"Password"%>
                    </div>
                  
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg' , type:"password", placeholder:"Password Confirmation"%>
                    </div>
                  </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.submit "Sign up", class: 'btn btn-default', type:"submit" %>
                    </div>
                    <br>
                    <div class="auth-links register-text">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                </div>
              <% end %>    
            </div>
          </div>
        </div>
      </section>
    </div>
			<!-- Wrapper end-->
  </div>
</section>
