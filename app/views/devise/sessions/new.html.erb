<section id="page-contact" class="page-contact">
<div class="layout">

			<!-- Wrapper-->
			<div class="wrapper">

				<section class="module">
					<div class="container">
						<div class="row" style="border-color: gold;">
							<div class="col-md-4 m-auto">
								<div class="up-logo">
									<p class="text-center m-b-50"><img src="assets/images/logo.png" width="100" alt=""></p>
								</div>
                <h2 class="section-title"><span style="color: #ffd700;">LOG IN </span></h2>
                <div class="spacer"></div>
                <hr>
                 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="up-form">
                    <form method="post">
                      <div class="form-group">
                       <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", type:"email" , placeholder:"Email"%>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg' , type:"password" , placeholder:"Pasword"%>
                      </div>

                      <% if devise_mapping.rememberable? -%>
                        <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>

                      <div class="form-group">
                         <%= f.submit "Log in", class: 'btn btn-default', type:"submit" %>
                      </div>
                    </form>
                  </div>
                <%end%>
								<div class="up-help">
                   <%= render "devise/shared/links" %>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
			<!-- Wrapper end-->
</section>

